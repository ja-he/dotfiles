# Volume Changing 
set $PrimaryOutput alsa_output.usb-FiiO_FiiO_USB_DAC_K1-01.analog-stereo
	# Mute Toggle 
	bindsym $mod+numbersign exec pactl set-sink-mute $PrimaryOutput toggle
 	# Volume up / down 
 	bindsym $mod+plus exec pactl set-sink-volume $PrimaryOutput +5%
	bindsym $mod+minus exec pactl set-sink-volume $PrimaryOutput -5%
	# Set Volume = 100%
	bindsym $mod+shift+plus exec pactl set-sink-volume $PrimaryOutput 100%

