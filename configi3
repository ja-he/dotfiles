# LENOVO IDEAPAD E31 SPECIFIC SECTION: 

# Sreen brightness controls
	bindsym XF86MonBrightnessUp exec xbacklight -inc 10 
	bindsym XF86MonBrightnessDown exec xbacklight -dec 10 

# Touchpad setup
# [sidenote: these are dependent on the number of connected devices, 
# meaning, dass die id des Touchpads zB 13 sein kann, wenn das Gerät mit 
# zusätzlich verbundene Geräten gestartet wird. 
# Allg. Fall wohl unverbunden, daher id=12
    # set touchpad (deviceid=13) touchpad disabled while typing (optionnr=295) to true
	exec_always --no-startup-id xinput set-prop 12 295 1
    # set touchpad (deviceid=13) scroll methods (optionnr=293) to enable edge scrolling 
	exec_always --no-startup-id xinput set-prop 12 293 {1, 1, 0} 
    exec_always --no-startup-id ~/.scripts/touchpadsettings.sh

# GER KB layout 
	exec_always --no-startup-id setxkbmap de
# ibus 
    exec --no-startup-id ibus-daemon

# Default Built-in Speakers to muted 
	exec --no-startup-id pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo 1
